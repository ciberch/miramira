<form class="form-horizontal" action="/" method="post">
    <input type="hidden" name="operation" value="teamAddUser">       
        <div id="user_selection" class="modal hide fade" >
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3>Select users to add</h3>
            </div>
            <div class="modal-body">
	            <span class="controls" style="padding: 10px;" >
	                <select id="circle_name" class="input-xlarge" name="team">
	                    <% @user.circles.each do |team| %>
	                    <option value="<%= team %>">
	                    	<span><%= team %></span>
	                    </option>
	                    <% end %>
	                </select>
	            </span>
	            <span class="controls" style="padding: 10px;" >
                    <% if @all_users %>
	                        <ul id="user_list" class="unstyled">
                            <% @all_users.each do |usr| %>
                                <li>
                                <input type="checkbox" id="check_<%= usr.key_name %>" name="member" value="<%= usr.key_name %>" />
                                <img src="<%=usr.photo %>" width="30" height="30"/>&nbsp;
                                    <span><%= usr.first_name %> <%=usr.last_name%></span>
                                </li>
                            <% end %>
	                        </ul>
                      <% end %>
	                </select>
	            </span>
           </div>
            <div class="modal-footer">
            	<button type="button" class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                <button type="submit" class="btn btn-primary">Apply</button>
            </div>
        </div>
</form>
